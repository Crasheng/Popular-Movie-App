<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/review_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/reviewer_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/reviewer_icon"/>
        <TextView
            android:text="UserName"
            android:id="@+id/textView_review_author"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reviews_author"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/reviewer_icon"
            android:layout_toEndOf="@+id/reviewer_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</LinearLayout>